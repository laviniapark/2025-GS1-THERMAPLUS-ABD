@model Therma_Plus_DotNet.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h3>Tem certeza que deseja excluir o seu usuário?</h3>

<div>
    <p><strong>Nome: </strong>@Model.Nome</p>
    <p><strong>Idade: </strong>@Model.Idade</p>
    <p><strong>Doenca: </strong>@Model.Doenca</p>
    <p><strong>Estado: </strong>@Model.Estado</p>
    <p><strong>Cidade: </strong>@Model.Cidade</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="UsuarioId"/>
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" href="/usuario">Cancelar</a>
</form>